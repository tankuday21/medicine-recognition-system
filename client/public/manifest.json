  "shortcuts": [
    {
      "name": "Scan Medicine",
      "short_name": "Scan",
      "description": "Quickly scan and identify medicines",
      "url": "/scanner?shortcut=true",
      "icons": [
        {
          "src": "/icons/scan-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Emergency SOS",
      "short_name": "SOS",
      "description": "Emergency medical assistance",
      "url": "/sos?shortcut=true",
      "icons": [
        {
          "src": "/icons/sos-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Health Chat",
      "short_name": "Chat",
      "description": "Get health guidance and advice",
      "url": "/chat?shortcut=true",
      "icons": [
        {
          "src": "/icons/chat-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "My Reminders",
      "short_name": "Reminders",
      "description": "View and manage medication reminders",
      "url": "/reminders?shortcut=true",
      "icons": [
        {
          "src": "/icons/reminder-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/mobile-home.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshots/mobile-scanner.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "file_handlers": [
    {
      "action": "/scanner",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+mediot",
      "url": "/?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/scanner",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "handle_links": "preferred",
  "capture_links": "new-client"
}