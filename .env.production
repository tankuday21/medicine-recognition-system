# Production Environment Configuration for Mediot App

# Application Settings
NODE_ENV=production
REACT_APP_ENV=production
REACT_APP_VERSION=1.0.0

# API Configuration
REACT_APP_API_URL=https://mediot-app.vercel.app/api
REACT_APP_BASE_URL=https://mediot-app.vercel.app

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://mediot-user:${MONGODB_PASSWORD}@mediot-cluster.mongodb.net/mediot-production?retryWrites=true&w=majority
MONGODB_DB_NAME=mediot-production

# Authentication & Security
JWT_SECRET=${JWT_SECRET}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# External API Keys
OPENAI_API_KEY=${OPENAI_API_KEY}
GOOGLE_CLOUD_API_KEY=${GOOGLE_CLOUD_API_KEY}
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
SENDGRID_API_KEY=${SENDGRID_API_KEY}

# Push Notifications (VAPID Keys)
REACT_APP_VAPID_PUBLIC_KEY=${VAPID_PUBLIC_KEY}
VAPID_PRIVATE_KEY=${VAPID_PRIVATE_KEY}
VAPID_SUBJECT=mailto:support@mediot.app

# File Upload & Storage
CLOUDINARY_CLOUD_NAME=${CLOUDINARY_CLOUD_NAME}
CLOUDINARY_API_KEY=${CLOUDINARY_API_KEY}
CLOUDINARY_API_SECRET=${CLOUDINARY_API_SECRET}
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Analytics
SENTRY_DSN=${SENTRY_DSN}
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
MIXPANEL_TOKEN=${MIXPANEL_TOKEN}

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=${SENDGRID_API_KEY}
FROM_EMAIL=noreply@mediot.app
SUPPORT_EMAIL=support@mediot.app

# Cache Configuration
REDIS_URL=${REDIS_URL}
CACHE_TTL=3600

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true
ENABLE_AI_CHAT=true
ENABLE_GEOLOCATION=true
ENABLE_CAMERA=true

# Security Headers
HELMET_CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline' https://www.google-analytics.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.openai.com https://api.sendgrid.com; font-src 'self' data:

# CORS Configuration
CORS_ORIGIN=https://mediot-app.vercel.app
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=false
ENABLE_ERROR_TRACKING=true

# Performance
COMPRESSION_LEVEL=6
ENABLE_GZIP=true
ENABLE_BROTLI=true

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000